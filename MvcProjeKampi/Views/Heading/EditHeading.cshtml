@model Entity_Layer.Concrete.Heading

@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>EditHeading</h2>

@using (Html.BeginForm("Editheading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Heading ID")
        @Html.TextBoxFor(model => model.HeadingID, new { @class = "form-control" })
        <br />
        @Html.Label("Heading Name")
        @Html.TextBoxFor(model => model.HeadingName, new { @class = "form-control" })
        <br />
        @Html.Label("Writer Name")
        @Html.DropDownListFor(model => model.WriterID, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
        <br />
        @Html.Label("Date")
        @Html.TextBoxFor(model => model.HeadingDate, new { @class = "form-control" })
        <br />
        @Html.Label("Category")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Update</button>
    </div>
}